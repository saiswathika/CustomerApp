}

<p>
    @Html.ActionLink("Add Stores ", "Create", null, new { @class = "btn btn-primary btn-lg1" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
